  <script type="text/javascript">
    $(document).ready(function() {
    
    var options={
       chart:{renderTo:'container', polar:true},
       title:{text:'Cumulative human index'},
       legend:{enabled:false},
       credits:{enabled:false},
       pane:{startAngle:0, endAngle:360},
       xAxis:{tickInterval:45, min:0, max:360, label:{formatter:function(){return this.point.name; }}},
       yAxis:{min:0, max:5, tickInterval:1},
       plotOptions:{series:{pointStart:0, pointInterval:45, animation:false},
                    column:{colorByPoint:true, pointPadding:0, groupPadding:0}},
       series:[{type:'column',name:'column',
    data:[['index 1',0.5],['index 2',1.8],['index 3',4.9],['index 4',1.3],['index 5',1],['index 6',5],['index 7',2],['index 8',2]]}
         ,{type:'line', name:'Line', data:[1.2,0.3,2.4,4,1.3,2,4.3,3]},
